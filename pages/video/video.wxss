/* pages/video/video.wxss */
@import '/static/iconfont/iconfont.wxss';

.header {
    display: flex;
    padding: 14rpx;
}

.header image {
    width: 80rpx;
    height: 80rpx;

}

.header .search {
    border: 1rpx solid #eee;
    flex: 1;
    margin: 0 20rpx;
    font-size: 32rpx;
    text-align: center;
    line-height: 80rpx;
    color: #d43c33;
}

.nav-scroll {
    margin-top: 10rpx;
    display: flex;
    white-space: nowrap;
    height: 70rpx;
}

.nav-item {
    margin: 0 16rpx;
}

.nav-content {
    padding: 0 30rpx;
    font-size: 32rpx;
    height: 60rpx;
    line-height: 60rpx;
}

.active {
    background: #F5EDEB;
    color: #DD4949;
    border-radius: 30rpx;
}


.video-item {
    margin: 0 4%;
    margin-top: 26rpx;
    padding: 30rpx;
    border-radius: 20rpx;
    box-shadow: 0 0 10rpx rgba(0, 0, 0, .2);
}
/* 视频列表 */
.videos-scroll {
    /* calc: 可以动态计算css的宽高， 运算符左右两侧必须加空格，否则计算会失效 */
    /* 视口单位： vh vw  1vh = 1%的视口高度  1vw = 1%的视口宽度*/
    height: calc(100vh - 180rpx);
    /*height: calc(100vh - 100rpx); 用来测试页面上拉触底*/
  }
.video-item .common {
    width: 100%;
    height: 360rpx;
    border-radius: 20rpx;
}

.video-item .content {
    font-size: 26rpx;
    color: #777;
    height: 80rpx;
    line-height: 80rpx;
    max-width: 500rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

/* footer */
.footer {
    border-top: 1rpx solid #eee;
    padding: 20rpx 0;
}

.footer .avatar {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    vertical-align: middle;
}

.footer .nickName {
    font-size: 26rpx;
    vertical-align: middle;
    margin-left: 20rpx;
}

.footer .comments_praised {
    float: right;
}

.comments_praised .btn {
    display: inline;
    padding: 0;
    background-color: transparent;
    border-color: transparent;
}

.comments_praised .btn:after {
    border: none;
}

.comments_praised .item {
    margin-left: 50rpx;
    position: relative;
}

.comments_praised .item .count {
    position: absolute;
    top: -20rpx;
    font-size: 20rpx;
}